<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/purple_200</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <!--  for dismiss outside click  to dismiss  -->
    <style name="CustomBottomSheetDialogTheme" parent="DialogStyle">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">

        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="EditTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#344767</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">#000000</item>
    </style>



    <style name="simpletooltip_default" parent="@android:style/TextAppearance.Medium"></style>


</resources>